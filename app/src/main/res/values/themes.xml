<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.GoldCalculator" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Primary color for the app bar, toolbar, etc. -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- Darker variant of the primary color, used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- Accent color for buttons, floating action button, etc. -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize your light theme here -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
    </style>

    <!-- Dark theme variant -->
    <style name="Theme.GoldCalculator" parent="Base.Theme.GoldCalculator">
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
    </style>

    <!-- Define your custom colors here -->
    <color name="colorPrimary">#3F51B5</color>
    <color name="colorPrimaryDark">#303F9F</color>
    <color name="colorAccent">#FF4081</color>
    <color name="textColorPrimary">#212121</color>
    <color name="textColorSecondary">#757575</color>
    <color name="colorSurface">#FFFFFF</color>
    <color name="colorOnSurface">#000000</color>
    <color name="red">#FFDC7070</color>
    <color name="beige"> #F5F5DC</color>
